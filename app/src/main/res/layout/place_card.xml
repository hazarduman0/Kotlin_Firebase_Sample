<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/component_background">

    <TextView
        android:id="@+id/cardLocationName"
        style="@style/header_text_styles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:gravity="left"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Bursa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cardLocationName"
        app:layout_constraintTop_toBottomOf="@+id/cardDescription"
        app:srcCompat="@drawable/icon_calendar_12" />

    <TextView
        android:id="@+id/cardDate"
        style="@style/regular_text_styles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="03.02.2023"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/cardLocationName"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/cardDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:text="TextView"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@+id/cardLocationName"
        app:layout_constraintStart_toStartOf="@+id/cardLocationName"
        app:layout_constraintTop_toBottomOf="@+id/cardLocationName" />

</androidx.constraintlayout.widget.ConstraintLayout>